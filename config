# Defaults
Host *
    ForwardX11 no
    ForwardX11Trusted no
    port 22
    protocol 2
    PreferredAuthentications publickey
    PubKeyAuthentication yes
    ServerAliveCountMax 30
    ServerAliveInterval 60

# BitBucket
Host bitbucket
    ForwardAgent yes
    HostName bitbucket.org
    User git
    IdentityFile ~/.ssh/james@whitney.io

# Forge
Host forge
    ForwardAgent yes
    HostName 128.199.239.247
    User forge
    IdentityFile ~/.ssh/james@whitney.io

# GitHub
Host github
    ForwardAgent yes
    HostName github.com
    User git
    IdentityFile ~/.ssh/james@whitney.io

# Homestead
Host homestead
    ForwardAgent yes
    HostName 192.168.99.10
